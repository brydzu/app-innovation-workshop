<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:fftransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"    
    x:Class="ContosoFieldService.Pages.LoginPage"
    BackgroundColor = "#222E38"
    Title="Login">
	<ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="Start" Margin="0,80,0,0">
                <Label 
                    x:Name="lblWelcome"
                    AutomationId="lblWelcome"
                    Text="Welcome!" 
                    TextColor="White" 
                    FontSize="40" 
                    Margin="10,25,0,0" 
                    FontFamily="AvenirNext-Medium">
                </Label>
                <Label 
                    x:Name="lblTagLine"
                    AutomationId="lblTagLine"
                    Text="You'll need to login to get started." 
                    TextColor="White" 
                    Margin="15,0,0,0" 
                    FontSize="19" 
                    FontFamily="AvenirNext-Regular"></Label>
            </StackLayout>


           <!-- Signup Stack -->
           <StackLayout Orientation="Vertical" Padding="15,5,15,15" VerticalOptions="FillAndExpand">
                <Entry 
                    x:Name="tbxFullname"
                    AutomationId="tbxFullname"
                    Text="{Binding FullName}" 
                    Placeholder="Full Name" 
                    PlaceholderColor="#515151" 
                    BackgroundColor="#1C262F" 
                    TextColor="White" 
                    FontFamily="AvenirNext-Regular" 
                    HeightRequest="40">
                </Entry>
                
                <Entry 
                    x:Name="tbxEmail"
                    AutomationId="tbxEmail"
                    Text="{Binding Email}" 
                    Placeholder="Email Address" 
                    PlaceholderColor="#515151" 
                    BackgroundColor="#1C262F" 
                    TextColor="White" 
                    Keyboard="Email" 
                    FontFamily="AvenirNext-Regular" 
                    HeightRequest="40">
                </Entry>

          </StackLayout>  
          <StackLayout VerticalOptions="End" Padding="15,0,15,50">
                <Button 
                    x:Name="btnLogin"
                    AutomationId="btnLogin"
                    Command="{Binding Login}" 
                    Text="Login" 
                    BackgroundColor="#00D8CB" 
                    TextColor="White" 
                    FontSize="22" 
                    BorderRadius="8" 
                    HeightRequest="55" 
                    FontFamily="AvenirNext-Medium">
                </Button>
          </StackLayout>
            
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
