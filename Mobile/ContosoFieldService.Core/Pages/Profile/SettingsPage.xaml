<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ContosoFieldService.Pages.SettingsPage"
             Title="Settings"
             BackgroundColor = "#222E38">
	<ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical" Padding="15,10,5,20">
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Notifications" FontFamily="AvenirNext-Medium" TextColor="White" FontSize="16" HorizontalOptions="Start" />
                    </StackLayout>

                    <!-- Sub Line -->
                    <StackLayout Orientation="Horizontal" Margin="0,5,0,0">
                        <Image Source="icon_graph.png" Margin="5,0,10,0" />
                        <StackLayout Orientation="Vertical">
                            <Label Text="Notify on new jobs" FontFamily="AvenirNext-Regular" TextColor="White" FontSize="17" />
                            <Switch IsToggled="{Binding NotificationsEnabled}"></Switch>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>

                <!-- Line -->
                <BoxView HeightRequest="1" Margin="0,0,5,0" BackgroundColor="#2D3D4B" />


        </StackLayout>
	</ContentPage.Content>
</ContentPage>
